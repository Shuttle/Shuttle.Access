<sentinel-form title="role:add.title">
  <fieldset class="form-group">
    <sentinel-text focus="true" label="name" {(value)}="name" required="true" {errors}="errors" error-attribute="name"/>
    <sentinel-submit-button {click}="@add" text="add" />
    <sentinel-button {click}="@close" text="close" />
  </fieldset>
</sentinel-form>
