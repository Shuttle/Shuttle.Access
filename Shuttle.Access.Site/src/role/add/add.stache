<access-form title="role:add.title">
  <fieldset class="form-group">
    <access-text focus:from="'true'" label:from="'name'" vm:value:bind="name" required="true" vm:errors:from="errors" errorAttribute:from="'name'"/>
    <access-submit-button vm:click:from="@add" text="add" />
    <access-button vm:click:from="@close" text="close" />
  </fieldset>
</access-form>
