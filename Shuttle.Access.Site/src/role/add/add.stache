<access-form title="role:add.title">
  <fieldset class="form-group">
    <access-text focus="true" label="name" {(value)}="name" required="true" {errors}="errors" error-attribute="name"/>
    <access-submit-button {click}="@add" text="add" />
    <access-button {click}="@close" text="close" />
  </fieldset>
</access-form>
