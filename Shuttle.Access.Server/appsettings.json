{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System.Net.Http": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/.log",
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 1048576,
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "azure": "UseDevelopmentStorage=true;"
  },
  "Shuttle": {
    "Hopper": {
      "Inbox": {
        "WorkTransportUri": "azuresq://azure/access-server-inbox-work",
        "DeferredTransportUri": "azuresq://azure/access-server-inbox-deferred",
        "ErrorTransportUri": "azuresq://azure/access-error",
        "MaximumFailureCount": 8,
        "ThreadCount": 1,
        "IgnoreOnFailureDurations": [
          "00:00:01",
          "00:00:01",
          "00:00:01",
          "00:00:01",
          "00:00:01",
          "00:00:05",
          "00:00:10",
          "00:00:30"
        ]
      },
      "MessageRoutes": [
        {
          "Uri": "azuresq://azure/sentinel-server-inbox-work",
          "Specifications": [
            {
              "Name": "StartsWith",
              "Value": "Shuttle.Sentinel.Messages"
            }
          ]
        }
      ]
    },
    "Recall": {
      "EventStore": {
        "PrimitiveEventSequencerIdleDurations": [ "00:00:05" ]
      },
      "EventProcessing": {
        "ProjectionProcessorIdleDurations": [ "00:00:05" ],
        "ProjectionThreadCount": 1
      },
      "SqlServer": {
        "EventProcessing": {
          "ProjectionBatchSize": 10
        }
      }
    }
  }
}